{
  "authorizationURL": "https://www.pinterest.com/oauth",
  "tokenURL": "https://api.pinterest.com/v5/oauth/token",
  "permissions": [
    {
      "scope": "user_accounts:read",
      "label": "User Accounts",
      "required": true,
      "default": true
    }
  ],
  "configuration": [
    {
      "name": "client_id",
      "label": "Client ID",
      "description": "Public unique identifier for this application.",
      "required": true
    },
    {
      "name": "client_secret",
      "label": "Client Secret",
      "description": "Secret for this application.",
      "required": true
    }
  ]
}
