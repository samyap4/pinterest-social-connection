{
  "authorizationURL": "https://www.reddit.com/api/v1/authorize",
  "tokenURL": "https://www.reddit.com/api/v1/access_token",
  "permissions": [
    {
      "scope": "identity",
      "label": "Identity",
      "required": true,
      "default": true
    }
  ],
  "configuration": [
    {
      "name": "client_id",
      "label": "Client ID",
      "description": "Public unique identifier for this application.",
      "required": true
    },
    {
      "name": "client_secret",
      "label": "Client Secret",
      "description": "Secret for this application.",
      "required": true
    }
  ]
}
